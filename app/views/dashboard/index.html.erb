<h1 class="text-center mb-4">MENU - Funcionário</h1>

<div class="container">
  <!-- Links para Gerar CSV -->
  <div class="row mb-4">
    <div class="col-md-6 offset-md-3 text-center">
      <%= link_to 'Gerar CSV de Filmes', gerar_csv_filmes_path, class: 'btn btn-success mx-2 mb-3' %>
      <%= link_to 'Gerar CSV de Clientes', gerar_csv_clientes_path, class: 'btn btn-success mx-2 mb-3' %>
    </div>
  </div>

  <!-- Cards com Links para as Seções -->
  <div class="row">
    <!-- Card para Clientes -->
    <div class="col-md-4 mb-4">
      <div class="card shadow">
        <div class="card-header bg-primary text-white text-center">
          <h5 class="card-title">Clientes</h5>
        </div>
        <div class="card-body text-center">
          <%= link_to 'Ver Clientes', clientes_path, class: 'btn btn-outline-primary btn-block' %>
        </div>
      </div>
    </div>

    <!-- Card para Filmes -->
    <div class="col-md-4 mb-4">
      <div class="card shadow">
        <div class="card-header bg-info text-white text-center">
          <h5 class="card-title">Filmes</h5>
        </div>
        <div class="card-body text-center">
          <%= link_to 'Ver Filmes', filmes_path, class: 'btn btn-outline-info btn-block' %>
        </div>
      </div>
    </div>

    <!-- Card para Empréstimos -->
    <div class="col-md-4 mb-4">
      <div class="card shadow">
        <div class="card-header bg-success text-white text-center">
          <h5 class="card-title">Empréstimos</h5>
        </div>
        <div class="card-body text-center">
          <%= link_to 'Ver Empréstimos', emprestimos_path, class: 'btn btn-outline-success btn-block' %>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  body {
    background-image: url('https://example.com/background-image.jpg'); /* URL da sua imagem de fundo */
    background-size: cover; /* Faz a imagem cobrir toda a tela */
    background-position: center center; /* Centraliza a imagem de fundo */
    background-attachment: fixed; /* A imagem de fundo fixa na tela enquanto rola o conteúdo */
    height: 100vh; /* A altura do body ocupa 100% da tela */
    background-color: #e3f2fd;
  }

  .container {
    background-color: rgba(255, 255, 255, 0.9); /* Fundo branco com transparência para destacar sobre a imagem */
    padding: 30px;
    border-radius: 8px;
    box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
  }

  .card {
    border-radius: 8px;
  }

  .card-header {
    padding: 15px;
  }

  .card-body {
    padding: 20px;
  }

  .card-body .btn-block {
    width: 100%;
    margin-top: 10px;
  }
</style>