<div class="container mt-4">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-header bg-primary text-white">
          <h4>Detalhes do Filme</h4>
        </div>
        <div class="card-body">
          <div class="mb-3">
            <strong>Título:</strong> <%= @filme.titulo %>
          </div>
          <div class="mb-3">
            <strong>Categoria:</strong> <%= @filme.categoria.nome %>
          </div>
          <div class="mb-3">
            <strong>Ano de Lançamento:</strong> <%= @filme.ano_lancamento %>
          </div>
          <div class="mb-3">
            <strong>Diretor:</strong> <%= @filme.diretor %>
          </div>
          <div class="mb-3">
            <strong>Duração:</strong> <%= @filme.duracao %> minutos
          </div>

          <!-- Exibir a imagem do filme, se estiver anexada -->
          <div class="mb-3">
            <% if @filme.arquivo.attached? %>
              <strong>Imagem:</strong> <br>
              <%= image_tag @filme.arquivo, class: 'img-fluid', alt: @filme.titulo %>
            <% else %>
              <p>Sem imagem disponível</p>
            <% end %>
          </div>

          <div class="mt-3">
            <%= link_to 'Voltar', filmes_path, class: 'btn btn-secondary' %>
            <%= link_to 'Editar', edit_filme_path(@filme), class: 'btn btn-warning' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>