<div class="container d-flex justify-content-center align-items-center min-vh-100" style="background-color: #007bff;">
  <div class="col-md-6 col-lg-4">
    <div class="card shadow-lg">
      <div class="card-header bg-primary text-white text-center">
        <h4>Login</h4>
      </div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          
          <% if flash[:alert] %>
            <div class="alert alert-danger">
              <%= flash[:alert] %>
            </div>
          <% end %>

          <div class="mb-3">
            <%= f.label :email, class: 'form-label' %>
            <%= f.email_field :email, class: 'form-control', placeholder: 'Digite seu email', autofocus: true %>
          </div>

          <div class="mb-3">
            <%= f.label :password, "Senha", class: 'form-label' %>  <!-- Aqui mudou "password" para "Senha" -->
            <%= f.password_field :password, class: 'form-control', placeholder: 'Digite sua senha' %>
          </div>

          <div class="d-flex justify-content-between mb-3">
            <div class="form-check">
              <%= f.check_box :remember_me, class: 'form-check-input' %>
              <%= f.label :remember_me, "Lembrar de mim", class: 'form-check-label' %>
            </div>
          </div>

          <%= f.submit 'Entrar', class: 'btn btn-primary w-100' %>
        
        <% end %>
      </div>
    </div>
  </div>
</div>