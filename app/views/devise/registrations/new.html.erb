<div class="container d-flex justify-content-center align-items-center min-vh-100" style="background-color: #007bff;">
  <div class="col-md-6 col-lg-4">
    <div class="card shadow-lg">
      <div class="card-header bg-primary text-white text-center">
        <h4>Registrar-se</h4>
      </div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          
          <% if flash[:alert] %>
            <div class="alert alert-danger">
              <%= flash[:alert] %>
            </div>
          <% end %>

          <div class="mb-3">
            <%= f.label :email, class: 'form-label' %>
            <%= f.email_field :email, class: 'form-control', placeholder: 'Digite seu email', autofocus: true %>
          </div>

          <div class="mb-3">
            <%= f.label :password, "Senha", class: 'form-label' %>  <!-- Alterado para "Senha" -->
            <%= f.password_field :password, class: 'form-control', placeholder: 'Digite sua senha' %>
          </div>

          <div class="mb-3">
            <%= f.label :password_confirmation, "Confirmar Senha", class: 'form-label' %>
            <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirme sua senha' %>
          </div>

          <div class="mb-3">
            <%= f.submit 'Registrar', class: 'btn btn-primary w-100' %>
          </div>

        <% end %>

        <div class="text-center">
          <%= link_to 'JÃ¡ tem uma conta? FaÃ§a login', new_session_path(resource_name), class: 'text-muted' %>
        </div>
      </div>
    </div>
  </div>
</div>